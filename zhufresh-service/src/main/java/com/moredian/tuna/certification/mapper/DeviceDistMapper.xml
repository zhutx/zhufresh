<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.moredian.tuna.certification.mapper.DeviceDistMapper">

    <resultMap id="deviceDistResultMap" type="deviceDist">
		<result column="id" property="id" />
		<result column="area_code" property="areaCode" />
		<result column="area_name" property="areaName" />
		<result column="org_type" property="orgType" />
		<result column="totals" property="totals" />
		<result column="installs" property="installs" />
		<result column="gmt_create" property="gmtCreate" />
		<result column="gmt_modify" property="gmtModify" />
	</resultMap>
	
	<select id="findByAreaCode" parameterType="int" resultMap="deviceDistResultMap">
	    <include refid="sql_select" />
	    from pmo_device_dist where area_code = #{areaCode} 
	</select>
	
	<sql id="sql_select">
		select
			id,
	        area_code,
	        area_name,
	        org_type,
	        totals,
	        installs,
	        gmt_create,
	        gmt_modify
	</sql>
	
</mapper>